<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bj"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="47dp"
        android:layout_marginRight="47dp"
        android:layout_marginTop="@dimen/login_margin_top"
        android:gravity="left|center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/edit_bj" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/name_bj" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/xian_bj" />

        <EditText
            android:id="@+id/username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/username_hint"
            android:layout_marginLeft="5dip"
            android:textSize="18sp"
            android:textColor="@color/login_text_color"
            android:singleLine="true">
            <requestFocus />
         </EditText>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="47dp"
        android:layout_marginRight="47dp"
        android:layout_marginTop="23dp"
        android:gravity="left|center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/edit_bj" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/mima_bj" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/xian_bj" />

        <EditText
            android:id="@+id/txtuserpwd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginLeft="5dip"
            android:textSize="18sp"
            android:hint="@string/password_hint"
            android:textColor="@color/login_text_color"
            android:imeOptions="actionGo"
            android:inputType="textPassword"
            android:singleLine="true" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="47dp"
        android:layout_marginRight="47dp"
        android:layout_marginTop="35dp"
        android:layout_gravity="left"
        android:orientation="horizontal">
        
        <Button
           	android:id="@+id/btnLogin"
            android:layout_weight="1"
			android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:background="@drawable/sel_login"/>
        <Button
            android:layout_weight="1"
			android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:id="@+id/butn_settings"
            android:layout_marginLeft="23dp"
            android:layout_gravity="right"
            android:background="@drawable/sel_login_settings"/>
    </LinearLayout>

</LinearLayout>